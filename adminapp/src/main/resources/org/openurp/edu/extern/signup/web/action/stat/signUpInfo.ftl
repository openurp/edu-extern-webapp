[#ftl]
[@b.head/]
[@b.grid items=signupStats sortable="false" var="signupStat"]
    [@b.row]
        [@b.col title="学年学期"]${signupStat.schoolYear}学年${signupStat.semesterName}学期[/@]
        [@b.col property="subjectName" title="科目名称"/]
        [@b.col property="categoryName" title="考试类型"/]
        [@b.col property="count" title="报名人数"/]
        [@b.col property="sumOfOutline" title="考纲费"/]
        [@b.col property="sumOfMaterial" title="材料费"/]
        [@b.col property="sumOfSignup" title="报名费"/]
        [@b.col title="费用总计"]${signupStat.sumOfOutline?default(0)+signupStat.sumOfMaterial?default(0)+signupStat.sumOfSignup?default(0)}[/@]
    [/@]
[/@]
[@b.foot/]
